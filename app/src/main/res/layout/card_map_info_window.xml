<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="9dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/facultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facultad"
                android:textColor="#278B8B"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/decano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decano"
                android:textColor="#009688"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/logoUTEQ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_uteq"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="90dp"
        android:layout_marginTop="115dp"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/direccion"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="DirecciÃ³n"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/telefono"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Numero telefonico"
            android:textSize="14dp"></TextView>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>